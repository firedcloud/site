{
    "name": "oracle_server",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "build": "tsoa spec-and-routes && tsc",
        "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
        "start": "node build/src/index.js",
        "eslint:check": "eslint --max-warnings=0 .eslintrc.json \"./src/**/*.{js,jsx,ts,tsx}\"",
        "eslint:fix": "npm run eslint:check -- --fix",
        "prettier:check": "prettier -c --ignore-unknown .",
        "prettier:fix": "prettier -w --ignore-unknown .",
        "prettier:fix:watch": "npm run prettier:fix && onchange '**' --exclude-path .gitignore -- prettier -w --ignore-unknown {{file}}",
        "lint": "npm run eslint:check && npm run prettier:check",
        "lint:fix": "npm run eslint:fix && npm run prettier:fix"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node src/index.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.21",
        "@types/node-fetch": "^2.6.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "concurrently": "^7.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "nodemon": "^2.0.15",
        "onchange": "^7.1.0",
        "prettier": "^2.5.1",
        "ts-node": "^10.6.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@alch/alchemy-web3": "^1.2.5",
        "body-parser": "^1.19.2",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "morgan": "^1.10.0",
        "node-fetch": "^2.6.7",
        "openapi-typescript-fetch": "^1.1.2",
        "swagger-ui-express": "^4.3.0",
        "tsoa": "^3.14.1"
    }
}
