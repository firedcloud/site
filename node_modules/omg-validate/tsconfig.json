{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "module": "esnext",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "target": "es2019",
    "lib": ["esnext"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
