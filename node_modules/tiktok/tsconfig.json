{
  "compilerOptions": {
    /* Basic Options */
    "types": [
      "mocha"
    ],
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outFile": "./build/app.js",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "./src/index.ts"
  ],
  "compileOnSave": false
}
