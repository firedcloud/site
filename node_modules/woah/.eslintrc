{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],

  "parser": "babel-eslint",
  
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "env" : {
    "node" : true,
    "browser": true,
    "es6": true
  },

  "plugins": [
    "react"
  ],

  "rules": {
    "no-console": "off"
  }
}
